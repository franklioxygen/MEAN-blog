doctype html
head
  include links.jade
body
  include header.jade

  form(method='post' action='/edit/#{post.name}/#{post.time.day}/#{post.title}')
    a() title
    br
    input(type='text' name='title' value='#{post.title}' disabled='disabled')
    br
    textarea(name='post') #{post.post}
    br
    input(type='submit' value='save')

  include footer.jade
